<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".DemoFragments.RadioButtonFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the world\'s highest mountain?"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_margin="10dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_main_answers"
            android:padding="20dp">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matterhorn"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mount Olympus"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mount Everest"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mount Fuji"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"/>

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Answer"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/activity_main_submit"/>

    </LinearLayout>
